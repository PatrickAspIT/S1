                MaxHeight="30"
                Margin="5" 
                Click="Button_Click"/>
        <Button Grid.Column="0"
                Grid.Row="6"
                Tag="7"
                Content="Opgave 7"
                MaxHeight="30"
                Margin="5" 
                Click="Button_Click"/>
        <Button Grid.Column="0"
                Grid.Row="7"
                Tag="8"
                Content="Opgave 8"
                MaxHeight="30"
                Margin="5" 
                Click="Button_Click"/>
        <Button Grid.Column="0"
                Grid.Row="8"
                Tag="9"
                Content="Opgave 9"
                MaxHeight="30"
                Margin="5" 
                Click="Button_Click"/>

        <ListBox x:Name="ListBoxRes"
                 Grid.Column="1"
                 Grid.Row="0"
                 Grid.RowSpan="11"
                 Margin="3"/>

    </Grid>
</Window>
