                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="buttonOpg15_Click"/>
        <Button Name="buttonOpg16" Content="Opgave 1.6" 
                Grid.Column="0" Grid.Row="4" 
                Margin="10" 
