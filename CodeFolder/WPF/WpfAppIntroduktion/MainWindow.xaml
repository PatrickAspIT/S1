        <ListBox Name="listBoxRes" 
                 Grid.Column="1" Grid.Row="0"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                 Grid.RowSpan="9" 
                 Margin="5"/>
    </Grid>
</Window>
